<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/parent_raport"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.raport.ValidasiNisRaportActivity">

    <LinearLayout
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_sekolah" />


        <TextView
            android:text="Pengumuman Raport"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="NIS"
            android:textSize="@dimen/_20sdp"
            android:textColor="#000"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_4sdp" />
        <TextView
            android:text=":"
            android:textSize="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_nis_cek_pengumuman_raport"
            android:textSize="@dimen/_20sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_4sdp" />

    </LinearLayout>






        <Button
            android:id="@+id/btn_validasi_pengumuman_raport"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="Cek Raport"
            android:textColor="#ffff" />


    </LinearLayout>

</ScrollView>