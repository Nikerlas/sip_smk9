<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center" >



    <LinearLayout
        android:id="@+id/dialog_social_layout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical" >

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_free"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color_grey_100"
                android:gravity="center"
                android:padding="16dp"
                android:text="Free"
                android:textColor="@color/main_color_600"
                android:textSize="20sp"
               />

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_premium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color_600"
                android:gravity="center"
                android:padding="16dp"
                android:text="Premium"
                android:textColor="@color/main_color_300"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="22dp"
            android:paddingTop="22dp" >

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Username"
                android:textColor="@color/main_color_grey_500"
                android:textSize="10sp"
                />

            <EditText
                android:id="@+id/et_username_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:backgroundTintMode="@android:color/transparent"
                android:drawableBottom="@android:color/transparent"
                android:ems="10"
                android:hint="Username"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:textColor="@color/main_color_grey_700"
                android:textColorHint="@color/main_color_grey_700"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/main_color_grey_300" />

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp"
                android:maxLines="4"
                android:text="Password"
                android:textColor="@color/main_color_grey_500"
                android:textSize="10sp"
                />

            <EditText
                android:id="@+id/et_pass_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:backgroundTintMode="@android:color/transparent"
                android:drawableBottom="@android:color/transparent"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/main_color_grey_700"
                android:textColorHint="@color/main_color_grey_700"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/main_color_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/selector_dialog_warning"
                android:gravity="center"
                android:minWidth="64dp"
                android:padding="8dp"
                android:text="CANCEL"
                android:textColor="@color/main_color_600"
                android:textSize="14sp"
                />

            <com.smkn9.semarang.sip_smk9.activities.font.RobotoTextView
                android:id="@+id/dialog_social_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/selector_dialog_warning"
                android:gravity="center"
                android:minWidth="64dp"
                android:padding="8dp"
                android:text="OK"
                android:textColor="@color/main_color_600"
                android:textSize="14sp"
                 />
        </LinearLayout>

<!--        <ProgressBar-->
<!--            android:id="@+id/pb_loading_dialog_social"-->
<!--            android:visibility="gone"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->
    </LinearLayout>



</RelativeLayout>