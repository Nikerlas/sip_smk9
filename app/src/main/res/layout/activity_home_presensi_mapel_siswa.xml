<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/parent_home_presensi_mapel_siswa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.presensimapel.HomePresensiMapelSiswaActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="wrap_content"
                    android:text="NIS" />
                <TextView
                    android:text="@string/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_input_materi_nis"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="wrap_content"
                    android:text="Nama" />
                <TextView
                    android:text="@string/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_input_materi_nama"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="wrap_content"
                    android:text="Mapel" />
                <TextView
                    android:text="@string/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_input_materi_mapel"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="@dimen/_88sdp"
                android:layout_height="wrap_content"
                android:text="Durasi" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Jam Ke : "
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spJamAwal"
                    android:entries="@array/listJam"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="s/d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Jam Ke : "
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spJamAkhir"
                    android:entries="@array/listJam"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Lokasi" />
                <TextView
                    android:text="@string/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_input_materi_lokasi"
                    android:text="Kordinat lokasi belum didapatkan"
                    android:textColor="#F44336"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Tanggal" />
                <TextView
                    android:text="@string/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_input_materi_tanggal"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Kegiatan" />
            <EditText
                android:id="@+id/et_input_materi_presensi_mandiri_kegiatan"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:hint="Isikan kegiatan yang dilakukan pada jam ini"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

            </EditText>

            <Button
                android:id="@+id/btn_input_materi_mapel_lokasi"
                android:text="Get lokasi"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_input_materi_mapel"
                android:visibility="gone"
                android:text="Input Kegiatan"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>